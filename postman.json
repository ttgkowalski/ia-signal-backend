    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Script executado após cada requisição",
          "if (pm.response.code === 200 || pm.response.code === 201) {",
          "    console.log('Requisição executada com sucesso');",
          "    ",
          "    // Salva o token de autenticação automaticamente na collection",
          "    try {",
          "        const json = pm.response.json();",
          "        if (json && json.token) {",
          "            pm.collectionVariables.set('authToken', json.token);",
          "            console.log('Token salvo na collection');",
          "        }",
          "    } catch (e) {",
          "        // resposta não é JSON, ignorar",
          "    }",
          "} else {",
          "    console.log('Erro na requisição:', pm.response.code);",
          "}"
        ]
